root = true

# Default: modern UTF-8 with BOM is widely compatible on Windows/VS and emoji-safe.
# (We intentionally do not include *.ps1 here per your request.)

[*.{cs,axaml,csproj,sln,md,json,txt}]
charset = utf-8-bom
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C# quality defaults
[*.cs]
indent_style = space
indent_size = 4
dotnet_diagnostic.IDE0005.severity = suggestion
dotnet_diagnostic.IDE0060.severity = suggestion

# ==== C# code style (warnings where they matter) ====
# Remove unnecessary usings
dotnet_diagnostic.IDE0005.severity = warning
# Unused parameter
dotnet_diagnostic.IDE0060.severity = warning
# Unused private members
dotnet_diagnostic.IDE0051.severity = suggestion
# Make fields readonly when possible
dotnet_diagnostic.IDE0044.severity = suggestion
# Use var preferences (balance explicitness & noise)
csharp_style_var_for_built_in_types = false:suggestion
csharp_style_var_when_type_is_apparent = true:suggestion
csharp_style_var_elsewhere = false:suggestion
# Prefer file-scoped namespaces
csharp_style_namespace_declarations = file_scoped:suggestion
# Pattern matching/simplification
dotnet_diagnostic.IDE0072.severity = suggestion
dotnet_diagnostic.IDE0011.severity = suggestion
# Object/collection initializers
dotnet_diagnostic.IDE0017.severity = suggestion
dotnet_diagnostic.IDE0028.severity = suggestion
# Expression-bodied members where short
dotnet_diagnostic.IDE0022.severity = suggestion
dotnet_diagnostic.IDE0027.severity = suggestion
# Null checks
dotnet_diagnostic.CA1062.severity = suggestion

# Async
# Discourage async void (except event handlers)
dotnet_diagnostic.VSTHRD100.severity = warning

# ==== Avalonia XAML ====
[*.axaml]
indent_style = space
indent_size = 2
